<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ljs_Cafe_Kiosk" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <!-- number 피커 custom  -->
    <style name="numberPickerCustomSize">
        <!-- 내부 숫자 사이즈 -->
        <item name="android:textSize">30sp</item>
        <!-- 숫자 색깔-->
        <item name="android:editTextColor">#2E2E2E</item>
        <!-- 선택값 구분선 색상변경 -->
        <item name="colorControlNormal">@color/main2</item>
    </style>

    <!--탭 레이아웃 custom-->
    <style name="TabText" parent="TextAppearance.Design.Tab">
        <!--텍스트 사이즈-->
        <item name="android:textSize">16sp</item>
        <!--텍스트 색상-->
        <item name="android:textColor">@color/black</item>
        <!--텍스트 스타일-->
        <item name="android:textStyle">bold</item>
        <!--슬라이드 바 색상-->
        <item name="tabIndicatorColor">@color/black</item>
        <!--선택된 탭 텍스트 색상-->
        <item name="tabSelectedTextColor">@color/red</item>
    </style>



</resources>